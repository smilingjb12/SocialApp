@model SocialApp.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<link href="~/Content/signup.css" rel="stylesheet" />

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new {role = "form", id="signup-form", returnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    <h2 class="text-center">Login</h2>
    @Html.ValidationSummary(excludePropertyErrors: true)
    @Html.ValidationMessageFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", autofocus = true, @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Password)
    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
    <div class="checkbox">
        @Html.CheckBoxFor(m => m.RememberMe) 
        @Html.LabelFor(m => m.RememberMe)
    </div>
    <input type="submit" class="btn btn-lg btn-primary" value="Submit" />
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}