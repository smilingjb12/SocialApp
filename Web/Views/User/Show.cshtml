@model Data.Domain.User
@{
    ViewBag.Title = "Show";
}

<div class="row">
    <div class="col-xs-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-pencil"></span>&nbsp;<strong>Info</strong>
            </div>
            <div class="panel-body">
                <div>
                    <img class="profile" src="@Model.PictureFilePath" />
                </div>
                <ul class="list-unstyled">
                    <li>
                        <strong>@Html.LabelFor(m => m.FullName):</strong> @Model.FullName
                    </li>
                    <li>
                        <strong>@Html.LabelFor(m => m.Country):</strong> @Model.Country
                    </li>
                    <li>
                        <strong>@Html.LabelFor(m => m.City):</strong> @Model.City
                    </li>
                    <li>
                        <strong>@Html.LabelFor(m => m.About):</strong> @Model.About
                    </li>
                </ul>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-user"></span>&nbsp;<strong>Friends</strong>
            </div>
            <div class="panel-body">
                None
            </div>
        </div>
    </div>
    <div class="col-xs-8">
        <p>
            <strong>Recent activity</strong>
        </p>
        <table class="table table-striped table-bordered table-hover">
            @foreach (int x in Enumerable.Range(0, 10))
            {
                <tr>
                    <td>@x</td>
                </tr>
            }
        </table>
    </div>
</div>
